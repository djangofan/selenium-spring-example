<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <context:annotation-config />
    <context:component-scan base-package="com.codesolid"/>

    <!-- Our dependencies -->
    <bean id="userStory" name="userStory" class="qa.example.scenarios.UserStory">
        <property name="user" ref="aSuperGeniusUser" />
    </bean>
    <bean id="aSuperGeniusUser" name="user" class="qa.example.scenarios.User">
        <property name="role" value="SuperGenius User" />
    </bean>

</beans>